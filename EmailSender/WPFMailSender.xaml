<Window x:Class="EmailSender.WPFMailSender"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmailSender"
        mc:Ignorable="d"
        Title="WPF Mail Sender" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnSendEmail" Content="Send Email" HorizontalAlignment="Left" Margin="349,202,0,0" VerticalAlignment="Top" Width="75" Click="BtnSendEmail_Click">
            <Button.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.MergedDictionaries>
                        <ResourceDictionary Source="Theme.xaml"/>
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>
            </Button.Resources>
        </Button>
        <PasswordBox HorizontalAlignment="Left" Margin="313,168,0,0" VerticalAlignment="Top" Width="150" Name="passwordBox"/>
    </Grid>
</Window>