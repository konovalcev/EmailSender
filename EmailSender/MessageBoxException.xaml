<Window x:Class="EmailSender.MessageBoxException"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmailSender"
        mc:Ignorable="d"
        Title="MessageBoxException" Height="450" Width="800">
    <Grid Margin="-1,1,0,-4" RenderTransformOrigin="0.5,0.5">
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="-0.32"/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.RenderTransform>
        <Label x:Name="lSendException" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Arial" Foreground="#FFFF0808"/>
        <Button x:Name="btnOK" Content="OK" HorizontalAlignment="Left" Margin="343,303,0,0" VerticalAlignment="Top" Width="75" Click="btnOK_Click" RenderTransformOrigin="2.77,11.609"/>
    </Grid>
</Window>